build>
  <plugins>
    <plugin>
      <groupId>org.codehaus.mojo.jboss</groupId>
      <artifactId>maven-jboss-deploy-plugin</artifactId>
      <version>1.6.0</version>
      <executions>
        <execution>
          <id>deploy-ear</id>
          <phase>install</phase>
          <goals>
            <goal>deploy</goal>
          </goals>
          <configuration>
            <earFile>${project.build.directory}/${project.build.finalName}.ear</earFile>
            <jbossHome>/chemin/vers/votre/dossier/jboss</jbossHome>
            <serverName>default</serverName>
            <jvmArgs>-Xmx1024m -DmonParametre=maValeur</jvmArgs>
            <args>-param1 valeur1 -param2 valeur2</args>
          </configuration>
        </execution>
      </executions>
    </plugin>
  </plugins>
</build>
run.bat -c chemin/vers/votre/instance -DmonParametre=maValeur -Xmx1024m -Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=8000 -Djava.endorsed.dirs=chemin/vers/votre/instance/lib/endorsed org.jboss.Main

    
